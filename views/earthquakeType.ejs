          <script type="text/javascript">

            $('#submit-earth').click(function (e) {              
                e.preventDefault();
                // console.log('XXXXXXXXX')
                // var data = {
                //     state: $('.state').val(),
                //     zoneOne: $('.zone-one').val(),
                //     zoneTwo: $('.zone-two').val(),  
                //     zoneThree: $('.zone-three').val(), 
                //     zoneFour: $('.zone-four').val(),
                //     zoneFive: $('.zone-five').val(),
                //     defaultTpye: $('.dType').val()
                // }                
                // console.log(data) 
                var st = $('.state').val()
                var df = $('.dType').val()
                 
                if (st !== 'Selected' && df !== 'Selected') {
                    $.ajax({
                    url: "/earthquake_added",   
                    type: "post",                      
                    data: {
                        state: $('.state').val(),
                        zoneOne: $('.zone-one').val(),
                        zoneTwo: $('.zone-two').val(),  
                        zoneThree: $('.zone-three').val(), 
                        zoneFour: $('.zone-four').val(),
                        zoneFive: $('.zone-five').val(),
                        defaultTpye: $('.dType').val()

                    },                         
                      success: function(result) {
                           console.log('success')
                           window.location.reload()
                       }
                    });
                }
            });
        </script>
          <script type="text/javascript">
            var earthquakes = <%- JSON.stringify(earthquake) %>
            $('.state').change(function (e) {
                
                e.preventDefault();
                var selectedState = $(this).val()
                var data = ''
               
                // console.log(earthquakes[selectedState])
                // console.log(selectedState)
                if ( earthquakes[selectedState] === undefined ){
                    $('.zone-one').val(data)
                    $('.zone-two').val(data)
                    $('.zone-three').val(data)
                    $('.zone-four').val(data)
                    $('.zone-five').val(data)
                    $('.dType').val('Selected')
                } else {
                    $('.zone-one').val(earthquakes[selectedState].zoneOne)
                    $('.zone-two').val(earthquakes[selectedState].zoneTwo)
                    $('.zone-three').val(earthquakes[selectedState].zoneThree)
                    $('.zone-four').val(earthquakes[selectedState].zoneFour)
                    $('.zone-five').val(earthquakes[selectedState].zoneFive)
                    $('.dType').val(earthquakes[selectedState].defaultTpye)

                }
                // if ( data1 == soils)
            });
        </script>

        
